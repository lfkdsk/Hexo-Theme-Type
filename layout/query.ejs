            border-collapse: collapse;
            margin-bottom: 10px;
        }

        #editor {
            width: 100%;
            height: auto;
            min-height: 200px;
            margin: 0 auto;
            font-size: 14px;
        }

        @media (min-width: 769px) {
            #editor {
                margin-top: 130px;
                font-size: 18px;
            }
        }

        #querybox {
            margin: 0 auto;
            margin-top: 10px;
        }

        .album-next-one {
            margin-top: 10px;
            display: block;
            text-align: center;
            border-style: solid;
            border-color: black;
            background-color: white;
            margin: 0 8px;
            padding: 1em 1.5em;
            border-width: 2px;
            font-weight: bold;
        }

        .album-next-one:hover {
            background-color: black;
            color: white;
        }

        .album-next-one:active {
            background-color: white;
            color: black;
        }
    </style>
</section>